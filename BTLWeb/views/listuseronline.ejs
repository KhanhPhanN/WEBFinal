<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- <script src="js/jquery.js"></script> -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chucnang.js"></script>
    <link rel="stylesheet" href="/css/useronline.css">
    <title>Document</title>
    <style>

    </style>
</head>
<body>
    <input type="button" id="chat1" value="Online">
    <div class="pop-up-box1">
        <div class="pop-up-head1">
            <div class="pop-up-left">Danh sách người dùng</div>
            <div class="pop-up-right"><div id="close1">&#10005</div></div>
        </div>
        <div class="pop-up-mess">
            <ul class="ChatLog1">
            <%UserOnline.forEach(function(data){%>    
                <%if(data.state=="on"){%>
                <li><i class="tentaikhoan"><%- data.user%></i><i class="trangthai" id="<%-data.user%>" style="color: blue"><%-data.state%></i></li>
               <%}else{%>
                <li><i class="tentaikhoan"><%- data.user%></i><i class="trangthai" id="<%-data.user%>"><%-data.state%></i></li>
                <%}%>
                <%})%>
                </ul>
        </div>
    </div>
</body>
<script>
    $("#chat1").show();
    $(".pop-up-box1").hide();
    $("#chat1").click(function(){
        $(".pop-up-box1").show();
        $("#chat1").hide();
        $("#chat").css("right","320px")
    })
    $("#close1").click(function(){
        $(".pop-up-box1").hide();
        $("#chat1").show();
        $("#chat").css("right","120px")
    })

    $(".pop-up-head1").click(function(){
        $(".pop-up-box1").hide();
        $("#chat1").show();
        $("#chat").css("right","120px")
    })

</script>
</html>